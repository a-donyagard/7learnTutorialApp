<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".animations.AnimationActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_load_from_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بارگذاری انیمیشن از xml"
        app:switchPadding="@dimen/standard_margin" />

    <ImageView
        android:id="@+id/image_kourosh"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:src="@drawable/funny_boy" />

    <Button
        android:id="@+id/button_start"
        style="@style/button_primary_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="شروع" />
</FrameLayout>
